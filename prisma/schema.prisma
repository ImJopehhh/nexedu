generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  SUPER_ADMIN
  ADMIN_SEKOLAH
  GURU
  SISWA
}

model School {
  id           String   @id @default(cuid())
  name         String
  slug         String   @unique
  logo         String?
  address      String?
  primaryColor String?  @default("#3b82f6")
  createdAt    DateTime @default(now())
  users        User[]
}

model User {
  id        String    @id @default(cuid())
  name      String?
  email     String    @unique
  password  String
  role      Role      @default(SISWA)
  schoolId  String?
  school    School?   @relation(fields: [schoolId], references: [id])
  sessions  Session[]
  createdAt DateTime  @default(now())
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}
